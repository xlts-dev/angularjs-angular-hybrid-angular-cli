{
  "name": "angularjs-angular-material-hybrid-demo",
  "description": "XLTS for AngularJS/Angular app in hybrid mode built with the Angular CLI",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "ng": "ng",
    "start": "npm run build:templates && ng serve",
    "start:emulators": "firebase emulators:start",
    "build:templates": "gulp templates",
    "watch:templates": "gulp watch",
    "build": "npm run build:templates && ng build",
    "build:prod": "npm run build:templates && ng build -c production",
    "prettier": "prettier --write \"**/*.{js,json,css,scss,less,md,ts,html,component.html}\"",
    "lint": "ng lint",
    "smex": "source-map-explorer",
    "deploy": "npm run build:templates && ng deploy",
    "update": "npm-check -u"
  },
  "dependencies": {
    "@angular/animations": "12.2.8",
    "@angular/cdk": "12.2.8",
    "@angular/common": "12.2.8",
    "@angular/compiler": "12.2.8",
    "@angular/core": "12.2.8",
    "@angular/fire": "^7.0.4",
    "@angular/forms": "12.2.8",
    "@angular/material": "12.2.8",
    "@angular/platform-browser": "12.2.8",
    "@angular/platform-browser-dynamic": "12.2.8",
    "@angular/upgrade": "12.2.8",
    "@schuchard/prettier": "^5.0.0",
    "@types/angular": "^1.8.2",
    "@types/angular-material": "^1.1.72",
    "angular": "npm:@xlts.dev/angular@1.8.7",
    "angular-animate": "npm:@xlts.dev/angular-animate@1.8.7",
    "angular-aria": "npm:@xlts.dev/angular-aria@1.8.7",
    "angular-material": "^1.2.3",
    "angular-messages": "npm:@xlts.dev/angular-messages@1.8.7",
    "angular-sanitize": "npm:@xlts.dev/angular-sanitize@1.8.7",
    "firebase": "^9.0.0",
    "rxfire": "^6.0.0",
    "rxjs": "^6.6.7",
    "tslib": "^2.3.1",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1202.7",
    "@angular-devkit/build-angular": "~12.2.7",
    "@angular/cli": "~12.2.7",
    "@angular/compiler-cli": "~12.2.8",
    "@angular/language-service": "~12.2.8",
    "@types/gulp": "^4.0.8",
    "@types/node": "^14.17.1",
    "codelyzer": "^6.0.2",
    "debug": "^4.3.1",
    "firebase-tools": "^9.19.0",
    "fuzzy": "^0.1.3",
    "gulp": "~4.0.2",
    "gulp-angular-templatecache": "~3.0.0",
    "gulp-htmlmin": "~5.0.1",
    "husky": "~4.3.8",
    "inquirer": "^6.2.2",
    "inquirer-autocomplete-prompt": "^1.0.1",
    "jsonc-parser": "^3.0.0",
    "lint-staged": "^11.1.2",
    "npm-check": "^5.9.2",
    "open": "^7.0.3",
    "prettier": "^2.4.1",
    "rxjs-tslint-rules": "^4.34.8",
    "source-map-explorer": "^2.5.2",
    "ts-node": "^10.2.1",
    "tslint": "~6.1.3",
    "tslint-config-prettier": "1.18.0",
    "tsutils": "^3.21.0",
    "typescript": "~4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && ng lint"
    }
  },
  "lint-staged": {
    "*.{js,json,css,scss,less,md,ts,html,component.html}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=12",
    "npm": "6"
  }
}
